<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/page_home_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/table_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center|right"
            android:paddingLeft="15dp"
            android:text="覆盖 -65dbm" />

        <RelativeLayout
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_ring">

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:background="@drawable/bg_circle"
                android:gravity="center">

                <TextView
                    android:id="@+id/center_divider"
                    android:layout_width="100dp"
                    android:layout_height="1dp"
                    android:layout_centerInParent="true"
                    android:background="@color/title_blue" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/center_divider"
                    android:gravity="center|bottom"
                    android:text="上海"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/cell"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/center_divider"
                    android:gravity="center|top"
                    android:text="小区信息"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_cell_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cell"
                    android:gravity="center|top"
                    android:text="钦江园-101"
                    android:textSize="11sp" />


            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前驻留网络:" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="3dp"
                android:text="中国移动4G" />
        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:padding="20dp">

        <TextView
            android:id="@+id/tv_html_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/html"
            android:gravity="center|bottom"
            android:padding="5dp"
            android:text="网页" />

        <TextView
            android:id="@+id/tv_video_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/video"
            android:gravity="center|bottom"
            android:padding="5dp"
            android:text="视频" />

        <TextView
            android:id="@+id/tv_voice_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/voice"
            android:gravity="center|bottom"
            android:padding="5dp"
            android:text="语音" />

        <TextView
            android:id="@+id/tv_test_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/test"
            android:gravity="center|bottom"
            android:padding="5dp"
            android:text="测速" />

        <TextView
            android:id="@+id/tv_connect_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/connect"
            android:gravity="center|bottom"
            android:padding="5dp"
            android:text="连接" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:text="地址：上海市陆家嘴" />
</LinearLayout>