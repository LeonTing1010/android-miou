<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	<com.datang.miou.widget.AppTitle
		android:id="@+id/gen_map_title" 
		android:layout_width="match_parent"
		android:layout_height="wrap_content" />
	<LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical" 
    	android:weightSum="1" >
    <LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_weight="0.2"
    	android:orientation="horizontal" 
    	android:weightSum="1" 
    	android:gravity="center">

		<Spinner
		    android:id="@+id/scripts_spinner"
		    android:layout_width="0dp"
		    android:layout_height="match_parent"
		    android:layout_weight="0.5" />
		
		<Button
		    android:id="@+id/add_testing_plan_button"
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:text="@string/add_testing_plan"
		    android:layout_weight="0.2" >
		    
		</Button>

		<Button
		    android:id="@+id/delete_testing_plan_button"
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:text="@string/delete_testing_plan"
		    android:layout_weight="0.2">
		    
		</Button>
		
	</LinearLayout>
	<ListView 
	    android:id="@+id/test_plan_listView"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="0.8" >
	    
	</ListView>
	</LinearLayout>
</LinearLayout>
